<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">records.iitpkd.ac.in</domain>
        <domain includeSubdomains="true">iitpkd.ac.in</domain>
        <domain includeSubdomains="true">netaccess.iitpkd.ac.in</domain>
    </domain-config>
</network-security-config>
